{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ (gdb)",
            "type": "cppdbg",
            "program": "${fileDirname}/${fileBasenameNoExtension}.out",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "os": "linux",
            "preLaunchTask": "C/C++: Compile",
            "miDebuggerPath": "/usr/bin/gdb", // Replace with the path to gdb on your system
            "compilerArgs": [
                "-std=c++20"
            ],
            "setupCommands": [
                {
                    "text": "-enable-pretty-printing",
                    "type": "miCmd"
                }
            ]
        }
    ]
}